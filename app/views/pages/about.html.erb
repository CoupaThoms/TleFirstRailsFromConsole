<h1>Pages#about</h1>

<%= video_tag(
        'supercopaTurckheimChicane.mp4',
        id: 'background',
        autoplay: true,
        loop: false,
        muted: false,

        )  %>

<div class="row">
  <div class="col-md-5">
    FDP
    <%= image_tag "supercopaProfile.jpg", width: 300 %>
    <%= image_tag "supercopa2.jpg", width: 300 %>
  </div>

  <div class="col-md-7">
    <p>Bla bla c'est ma description de mon super blog whoua c'est trop cool ce training (facepalm)</p>

    <div class="skills">
      <% @skills.each do |skill| %>
        <div class="skill">
          <h4><%= skill.title %></h4>
          <div class="progress">
            <div
              class="progress-bar progress-bar-striped bg-warning"
              role="progressbar"
              aria-valuenow="<%= skill.percent_utilized %>"
              aria-valuemax="100"
              style="width: <%= skill.percent_utilized %>%"
            ></div>
          </div>
        </div>
      <% end %>
    </div>

    <br/>
    <p>
      <button
        class="btn btn-primary"
        type="button"
        data-toggle="collapse"
        data-target="#jobHistory"
        aria-expanded="false"
        aria-controler="jobHistory"
      >
        Job History
      </button>

      <button
        class="btn btn-primary"
        type="button"
        data-toggle="collapse"
        data-target="#education"
        aria-expanded="false"
        aria-controler="education"
      >
        Education
      </button>
    </p>

    <p>
    <div class="collapse" id="jobHistory">
      <div class="card card-block">
        Job 1
      </div>
      <div class="card card-block">
        Job 2
      </div>
    </div>

    <div class="collapse" id="education">
      <div class="card card-block">
        School 1
      </div>
      <div class="card card-block">
        School 2
      </div>
      <div class="card card-block">
        School 3
      </div>
    </div>
    </p>

  </div>
</div>

<p>Find me in app/views/pages/about.html.erb</p>
