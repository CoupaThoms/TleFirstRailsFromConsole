
<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_item.thumb_image , :class => "icard-img-top" unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text"><%=portfolio_item.body%></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", portfolio_show_path(portfolio_item.id) %></button> <%# ici on a portfolio_show qui est definie par nous dans le routes.rb %>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin)  %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Destroy", portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)  %></button><%#on est pas obligÃ© de mettre .id%>

        </div>
        <small class="text-muted">Updated <%= distance_of_time_in_words(portfolio_item.updated_at, Time.now) %> ago</small>
      </div>
    </div>
  </div>
</div>
