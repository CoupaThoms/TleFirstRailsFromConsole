<%= form_for(@portfolio_items) do |f| %>

  <% if @portfolio_items.errors.any? %>

    <%= @portfolio_items.errors.full_messages.each do | err | %>
      <%= js add_gritter(err, title: "Thomas LefÃ¨vre Portfolio", sticky: false) %>
    <% end %>
  <% end %>

<div clas="row">

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_area :subtitle, class:'form-control' %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class:'form-control', rows: 13 %>
    </div>
  </div>

</div>


<div class="col-md-12">
  <div class="form-group">
    <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
  </div>
</div>


<% end %>
